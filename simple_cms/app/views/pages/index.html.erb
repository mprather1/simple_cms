<% @page_title = "Pages" %>

<%= link_to("<< Back to Admin Page", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class= "pages index">
  <h2>Pages</h2>
<%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Page", {:action => 'new'}, :class => 'action new') %>
  <hr />

  <div><%= pluralize(@pages.size, 'page') %> found</div>
  <br>
  <table class="listing" summary="Page List">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Subject</th>
      <th>Page</th>
      <th>Visible</th>
      <th>Sections</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
    <tr class="<%= cycle('odd', 'even')%>">
      <td><%= page.position %> </td>
      <td><%= page.subject.name if page.subject %></td>
      <td><%= page.name %></td>
      <td class="center"><%= status_tag(page.visible) %></td>
      <td><%= page.sections.size %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => page.id }, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => page.id }, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => page.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
