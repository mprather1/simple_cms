<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS<%= " | #{@page_title}" if @page_title %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>
  <body>
    <div id="header">
      <h1>Simple CMS</h1>
    </div>
    <div id="main">
        <div id="navigation">
          <%= render(:partial => 'layouts/navigation', :locals => {:subjects => @subjects}) %>
        </div>
      <div id="content">
        <!before yield !>
          <%= yield %>
        <!after yield!>
      </div>
      <div class="clear"></div>
    </div>
    <div id="footer">
     <p><%= link_to("Admin Login", {:controller => "access", :action => 'index'}, :class => 'back-link') %>

      <!--<p id="copyright">&copy; fuck_you</p>-->

      </p>
    </div>
  </body>
</html>
