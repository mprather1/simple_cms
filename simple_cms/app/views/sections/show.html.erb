

<%= link_to("<< Back to List", {:action => 'index', :page_id => @page.id}, :class => 'back-link') %>
<% content = @section.content %>
<div class="sections show">
	<h2>Show Section</h2>

	<table summary="Section detail view">
		<tr>
			<th>Name</th>
			<td><%= @section.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @section.position %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%=  @section.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Content</th>
			<td><%= simple_format(word_wrap(content, :line_width => 30)) %></td>
		<!--	<td><%# @section.content %></td> -->
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @section.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @section.updated_at %></td>
		</tr>
	</table>
</div>
